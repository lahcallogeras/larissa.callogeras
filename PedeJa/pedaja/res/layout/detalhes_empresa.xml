<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:background="#F5F5F5">
          
   <RelativeLayout
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  android:background="#F5F5F5"  > 
		    
		  <ImageView
		      android:id="@+id/imgDetEst"
		      android:contentDescription="@+string/teste"
		      android:layout_width="120dp"
		      android:layout_height="70dp"
		      android:background="#ffffff"
		      android:scaleType="centerCrop"
		  /> 
		    
		  <TextView
		      android:id="@+id/txtDetEstNome"
		      android:layout_width="fill_parent"
		      android:layout_height="70dp"
		      android:layout_toRightOf="@+id/imgDetEst"
		      android:layout_alignTop="@+id/imgDetEst"
		      android:textSize="25sp"     
		      android:gravity="center"
		      android:textColor="#C40000"
		      android:paddingLeft="5dp"    /> 
		      
	    <TextView
	       android:id="@+id/txtDetEndereco"
	       android:layout_width="fill_parent"
	       android:layout_height="50dp"
	       android:layout_below="@id/txtDetEstNome"
	       android:textSize="20sp"          
	       android:textColor="#000000"
	       android:gravity="center"
	       android:paddingLeft="5dp"   />
	    
	    <TextView
	        android:id="@+id/txtTelefones"
	        android:layout_width="fill_parent"
	        android:layout_height="50dp"
	        android:layout_below="@id/txtDetEndereco"
	        android:gravity="center"
	        android:paddingLeft="5dp"
	        android:text="@string/telefones"
	        android:textColor="#C40000"
	        android:textSize="20sp" />
	    
	 </RelativeLayout>     
       
      
        <ListView
        android:id="@+id/lstTelefoneEmpresa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#ECECEC"
        android:dividerHeight="1sp" />
</LinearLayout>
