<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true"  >


 <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:fillViewport="true" 
    android:orientation="vertical">
     
        <TextView
	      android:layout_width="fill_parent"
          android:layout_height="wrap_content"
	      android:textSize="25sp"     
	      android:layout_marginTop="10dp"
	      android:gravity="center"
	      android:textColor="#C40000"
	      android:paddingLeft="5dp"    
	      android:textStyle="italic" 
	      android:id="@+id/txtCategoria"
	      android:text="@string/tamanho"/>
        
         
        <TextView
	      android:layout_width="fill_parent"
          android:layout_height="wrap_content"
	      android:textSize="20sp"     
	      android:gravity="center"
	      android:textColor="#666666"
	      android:paddingLeft="5dp"    
	      android:textStyle="italic" 
	      android:id="@+id/txtTamanho"
	      android:text="@string/tamanho"/>
        
        <RelativeLayout     
            android:layout_marginTop="10dp"    
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content">
	        
	        <LinearLayout 	
	            android:id="@+id/lnPizza"
	            android:background="@null"	
	            android:gravity="center_horizontal"	            
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="10dp"
			    android:layout_marginBottom="10dp"
	   			android:orientation="horizontal">
	            
	        </LinearLayout>
	        
	        
	        <LinearLayout 	
	            android:background="@null"	
	            android:id="@+id/lnPizzaButton"
	            android:gravity="center_horizontal"	            
			    android:layout_width="fill_parent"
			    android:baselineAligned="false"
			    android:layout_height="137dp"
	   			android:orientation="horizontal">
	   			
	            <RelativeLayout    
				    android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
				    android:layout_weight="1">
				    
	                  <TextView
				      android:layout_width="fill_parent"
			          android:layout_height="wrap_content"   
			          android:layout_alignParentTop="true"   
		              android:layout_alignParentRight="true"
		              android:layout_marginRight="50dp"
		              android:gravity="right"
				      android:textSize="14sp"     
				      android:textColor="#000000"
				      android:textStyle="italic" 
				      android:id="@+id/txtMetade01"         
				      android:text="@string/vazio"/>
	   			
		            <Button
		                android:id="@+id/btnEsquerda"
		                style="?android:attr/buttonBarButtonStyle"
		                android:layout_width="130dp"
		                android:layout_height="210dp"
		                android:layout_alignParentRight="true"
		                android:layout_marginTop="10dp"
		                android:background="@null" />
		            
	            </RelativeLayout>
	            
	           <RelativeLayout    
				    android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
				    android:layout_weight="1">		            
	                   
			        <TextView
				      android:layout_width="fill_parent"
			          android:layout_height="wrap_content"  
			          android:layout_alignParentTop="true"    
		              android:layout_alignParentLeft="true"
		              android:layout_marginLeft="50dp"
				      android:textSize="14sp"     
				      android:gravity="left"
				      android:textColor="#000000"
				      android:textStyle="italic" 
				      android:id="@+id/txtMetade02"
				      android:text="@string/vazio"/>
	   			
		            <Button 
		                android:background="@null"
		                android:layout_alignParentLeft="true"
		                android:id="@+id/btnDireita"
			            style="?android:attr/buttonBarButtonStyle" 		  
			            android:layout_marginTop="10dp"              
					    android:layout_width="130dp"
		                android:layout_height="210dp" />
		            
	            </RelativeLayout>
	            
	        </LinearLayout>
	        
	        <RelativeLayout    
				    android:layout_width="fill_parent"
			    	android:paddingTop="10dp"
			    	android:layout_height="137dp"
			    	android:id="@+id/lnMetade03"
	                android:layout_below="@+id/lnPizzaButton">
	   			
	            <Button
	                android:id="@+id/btnInferior"
	                style="?android:attr/buttonBarButtonStyle"
	                android:layout_width="190dp"
	                android:layout_height="190dp"
	                android:layout_centerHorizontal="true"
	                android:background="@null" />
	            
            </RelativeLayout>
            
           <TextView
			      android:layout_width="fill_parent"
		          android:layout_height="wrap_content"  
		          android:layout_below="@+id/lnMetade03"
			      android:textSize="14sp"     
			      android:gravity="center"
			      android:textColor="#000000"
			      android:textStyle="italic" 
			      android:id="@+id/txtMetade03"
			      android:text="@string/vazio"/>
	        
	         <LinearLayout 	
	            android:background="@null"	
	            android:gravity="center_horizontal"	            
			    android:layout_width="fill_parent"			    
	            android:layout_below="@+id/lnPizzaButton"
			    android:layout_height="wrap_content"
	   			android:orientation="horizontal">
	            
		   
	
	        
	            
	        </LinearLayout>
        
        </RelativeLayout>
        
        
         
        <TextView
	      android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"          
	      android:textSize="20sp"     
	      android:gravity="center"
	      android:textColor="#000000"
	      android:textStyle="italic" 
	      android:id="@+id/txtTotal"
	      android:text="@string/tamanho"/>
        
        <RelativeLayout
            android:id="@+id/relQtdProduto"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="#F5F5F5"
	        android:layout_marginTop="5dp"
	        android:layout_marginBottom="5dp"
	        android:orientation="vertical" >
	        
          <RelativeLayout
            android:layout_centerHorizontal="true"	    
            android:id="@+id/relBotoes"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">
	    	      <Button
			        android:id="@+id/btnMenos"
			        android:layout_width="50dp"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"	        
			        android:textColor="#FFFF00"
			        android:background="@drawable/round_button"
			        android:textStyle="bold"
			        android:text="@string/menos" />
	    	      
	    	       <EditText
	    	           android:id="@+id/edtQtd"
	    	           android:layout_width="100dp"
	    	           android:layout_height="wrap_content"
	    	           android:layout_marginLeft="15dp"
	    	           android:layout_toRightOf="@id/btnMenos"
	    	           android:gravity="center_vertical|center_horizontal"
	    	           android:hint="@string/um"
	    	           android:text="@string/um"
	    	           android:textAlignment="center"
	    	           android:inputType="text"
	    	           android:textColor="#C40000"
	    	           android:textSize="20sp"
	    	           android:textStyle="italic" />
	    	      
	    	      <Button
	    	          android:id="@+id/btnMais"
	    	          android:layout_width="50dp"
	    	          android:layout_height="wrap_content"
	    	          android:layout_toRightOf="@id/edtQtd"
	    	          android:background="@drawable/round_button"
	    	          android:shadowRadius="500"
	    	          android:text="@string/mais"
	    	          android:textColor="#FFFF00"
	    	          android:textStyle="bold" />
    	     </RelativeLayout> 
    	      
      <RelativeLayout
        android:id="@+id/relLoginBotoes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
    	android:layout_below="@id/relBotoes"
	    android:layout_marginTop="10dp"
        android:orientation="vertical" >
	       
		      <TextView
		        android:id="@+id/lnSeparador3"
		        android:layout_width="fill_parent"
		        android:layout_marginLeft="15dp"
		        android:layout_marginRight="15dp"
		        android:layout_height="2dp"
		        android:background="#C40000"
		        android:gravity="top"
		        android:layout_marginTop="10dp"
		        android:textStyle="bold" />
		      
		      
	           
		    <Button
		        android:id="@+id/btnPedir"
		        android:layout_below="@id/lnSeparador3"
		        android:layout_width="150dp"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"	        	        
		        android:textColor="#FFFF00"
		        android:background="#C40000"
		    	android:layout_marginTop="10dp"
		        android:layout_marginRight="15dp"
    	        android:textAlignment="center"
		        android:textStyle="bold"
		        android:text="@string/pedir" />
	       
		</RelativeLayout>
    	      
     </RelativeLayout>
        
        
</LinearLayout>

</ScrollView>