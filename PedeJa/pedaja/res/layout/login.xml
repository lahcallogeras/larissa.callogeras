<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true" 
    tools:context=".LoginActivity" >

   	    
    <LinearLayout
    android:id="@+id/ln"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:orientation="vertical">
    
       <TextView
        android:id="@+id/lnSeparador1"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#C40000"
        android:gravity="top"
        android:textStyle="bold" />
            
        <ImageButton
      	android:id="@+id/btnSobre"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="#C40000"
        android:contentDescription="@drawable/logo_entrada"
        android:scaleType="fitCenter"  
        android:src="@drawable/logo_entrada" />
       
      <TextView
        android:id="@+id/lnSeparador2"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#C40000"
        android:gravity="top"
        android:textStyle="bold" />
      
      <TextView
	      android:id="@+id/txtUsuario"
	      android:layout_width="fill_parent"
          android:layout_height="wrap_content"
	      android:textSize="20sp"     
	      android:gravity="left"
	      android:textColor="#C40000"
	      android:paddingLeft="5dp"  
	      android:paddingTop="25dp"  
	      android:textStyle="italic" 
	      android:text="@string/usuario"/>
     
      <EditText
         android:id="@+id/edtUsuario"
	      android:layout_width="fill_parent"      
		  android:layout_height="wrap_content"
	      android:textSize="18sp"          
	      android:textColor="#000000"
	      android:gravity="left"
	      android:paddingLeft="5dp"   
	      android:hint="@string/usuario"
	      android:paddingTop="5dp" />     
	      
       
      <TextView
	      android:id="@+id/txtSenha"
	      android:layout_width="fill_parent"
          android:layout_height="wrap_content"
	      android:textSize="20sp"     
	      android:gravity="left"
	      android:textColor="#C40000"
	      android:paddingLeft="5dp"  
	      android:paddingTop="25dp"  
	      android:textStyle="italic" 
	      android:text="@string/senha"/>
     
      <EditText
         android:id="@+id/edtSenha"
	      android:layout_width="fill_parent"      
		  android:layout_height="wrap_content"
	      android:textSize="18sp"          
	      android:textColor="#000000"
	      android:gravity="left"
	      android:paddingLeft="5dp"   
	      android:hint="@string/senha"
	      android:inputType="textPassword"
	      android:paddingTop="5dp" />    
	            
      
      
            
       <RelativeLayout
           android:id="@+id/relLoginBotoes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
	    android:layout_marginTop="20dp"
        android:orientation="vertical" >
        
           
	    <Button
	        android:id="@+id/btnEntrar"
	        android:layout_width="150dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"	        
	        android:textColor="#FFFF00"
	        android:background="#C40000"
	        android:layout_marginRight="15dp"
	        android:textStyle="bold"
	        android:text="@string/entrar" />

       
	      <TextView
	        android:id="@+id/lnSeparador3"
	        android:layout_width="fill_parent"
	        android:layout_below="@id/btnEntrar"
	        android:layout_marginLeft="15dp"
	        android:layout_marginRight="15dp"
	        android:layout_height="2dp"
	        android:background="#C40000"
	        android:gravity="top"
	        android:layout_marginTop="10dp"
	        android:textStyle="bold" />
	      
	      
           
	    <Button
	        android:id="@+id/btnNovoUsuario"
	        android:layout_below="@id/lnSeparador3"
	        android:layout_width="150dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"	        	        
	        android:textColor="#FFFF00"
	        android:background="#C40000"
	        android:textStyle="bold"
	    	android:layout_marginTop="10dp"
	        android:layout_marginRight="15dp"
	        android:text="@string/novoUsuario" />
       
	</RelativeLayout>
	
  </LinearLayout>
  
   
</ScrollView>