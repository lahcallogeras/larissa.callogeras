<?xml version="1.0" encoding="utf-8"?> 
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:padding="5dp"
  android:background="#F5F5F5"  > 
    
  <ImageView
      android:id="@+id/imgEstabelecimento"
      android:contentDescription="@+string/teste"
      android:layout_width="120dp"
      android:layout_height="70dp"
      android:background="#ffffff"
      android:scaleType="fitXY"
  /> 
    
  <TextView
      android:id="@+id/txtEstNome"
      android:layout_width="fill_parent"
      android:layout_height="30dp"
      android:layout_toRightOf="@+id/imgEstabelecimento"
      android:layout_alignTop="@+id/imgEstabelecimento"
      android:textSize="20sp"     
      android:gravity="center"
      android:textColor="#C40000"
      android:paddingLeft="5dp"  
  /> 
    
   <TextView
      android:id="@+id/txtEstEndereco"
      android:layout_width="fill_parent"
      android:layout_height="50dp"
      android:layout_toRightOf="@+id/imgEstabelecimento"
      android:layout_alignBottom="@+id/imgEstabelecimento"
      android:textSize="13sp"          
      android:textColor="#000000"
      android:gravity="center"
      android:paddingLeft="5dp"  
        
  /> 
  <TextView
      android:id="@+id/txtIdEstabelecimento"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:textSize="20sp"    
      android:textColor="#333333"
      android:paddingLeft="5dp"  
      android:visibility="invisible"
  /> 
   
  <TextView
        android:layout_below="@+id/imgEstabelecimento"
        android:id="@+id/lnSeparador"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="7dp"
        android:background="#ff0000"
        android:gravity="top"
        android:textStyle="bold" />
  
</RelativeLayout>